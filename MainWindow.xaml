<Window x:Class="AutoUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdate"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Background="DarkGray">
        <StackPanel VerticalAlignment="Center">
            <Button Height="40" Width="150" Content="Get local version" Click="btnGetVersion_Click"></Button>
            <Button Height="40" Width="150" Content="UPDATE" Click="btnUpdate_Click"></Button>
            <Button Height="40" Width="150" Content="Create XML" Click="btnCreateXML_Click"></Button>
            <Button Height="40" Width="150" Content="Compare XML" Click="btnCompareXML_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
